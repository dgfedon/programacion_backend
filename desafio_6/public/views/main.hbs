<div>
    {{> header}}
</div>

{{!-- Formulario nuevo ítem --}}
<div class="m-4">
    <div class="row justify-content-center">
        <div class="card p-2 align-items-center" style="width: 40rem;">
            <div class="card p-2" style="width: 20rem;">
                <form onsubmit="addProduct()">
                    <h4 class="text-center m-2">Formulario nuevo ítem</h4>
                    <hr>
                    <div class="mb-2">
                        <label for="name" class="form-label">Nombre</label>
                        <input type="text" name="name" id="name" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label for="price" class="form-label">Precio</label>
                        <input type="number" name="price" id="price" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="img" class="form-label">Url Imagen</label>
                        <input type="text" name="img" id="img" class="form-control" required />
                    </div>
                    <input type="submit" value="ENVIAR" class="btn btn-outline-secondary w-100" />
                </form>
            </div>
            <div id="products"></div>
        </div>
    </div>
</div>

{{!-- Chat --}}
<div class="row mb-4 justify-content-center">
    <div class="card p-2" style="width: 30rem;">
        <h4 class="text-center m-2">Chat</h4>
        <hr>
        <div id="messages"></div>
        <form onsubmit="addMessage()" class="mt-2 d-flex justify-content-center">
            <input type="mail" id="mail" placeholder="Email:" required>
            <input type="text" id="msg" placeholder="Mensaje:" required>
            <div>
                <input type="submit" value="Enviar" class="btn btn-outline-secondary" >
            </div>
        </form>
    </div>
</div>
