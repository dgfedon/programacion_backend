include mixins/_header

doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title= title
    body
        +header
        .m-4
            .row.justify-content-center
                .card.p-2(style='width: 50rem;')
                    h4.text-center.m-2= title
                    hr
                    div
                    #data
                    if data
                        table.table.table-hover
                            thead
                                tr
                                    th(scope='col') ID
                                    th(scope='col') Nombre
                                    th(scope='col') Precio
                                    th(scope='col') Imagen
                            tbody
                            each product in data
                                tr
                                    th(scope='row')= product.id
                                    th= product.name
                                    th= product.price
                                    th
                                        img(src=product.img style="width: 80px;")
                            else
                                h4.text-center No hay productos
                    .d-grid.gap-2.mt-2
                        a.btn.btn-secondary(href='/' role='button') Agregar Producto
